<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.tns.espapp.fragment_new.LocatorFragment">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView

            android:tint="@color/colorPrimaryDark"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@mipmap/tns_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:layout_weight=".5"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <RelativeLayout

                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/loctorfrag_taxiform"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/house"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView2" />

                    <TextView

                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Vehicle Form"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <RelativeLayout

                    android:id="@+id/loctorfrag_taxihistory"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/house"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView

                        android:textSize="10sp"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Vehicle History"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>

        <!--  business loginb   ............................................................................
               -->
        <LinearLayout
            android:layout_weight=".5"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
                <RelativeLayout

                    android:id="@+id/loctorfrag_locationhistory"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/house"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView

                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Location History"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <RelativeLayout

                    android:id="@+id/loctorfrag_livetaxi"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/house"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:padding="5dp"
                        android:text="Live Vehicle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>

        <!--  about us ............................................................................
       -->



        <LinearLayout
            android:layout_weight=".5"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/Linear_aboutus"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
                <RelativeLayout

                    android:id="@+id/loctorfrag_currentlocation"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/house"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Current Location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>


            <!--          <>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>-->

              <LinearLayout
                  android:visibility="invisible"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="fill_parent">
                   <RelativeLayout

                       android:id="@+id/business_login"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="fill_parent">
                       <ImageView
                           android:tint="@color/colorPrimaryDark"
                           android:src="@drawable/house"
                           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_alignParentLeft="true"
                           android:layout_alignParentStart="true" />
                       <TextView
                           android:gravity="center"
                           android:singleLine="true"
                           android:layout_alignParentBottom="true"
                           android:textStyle="bold"
                           android:typeface="monospace"
                           android:textColor="@color/colorPrimary"
                           android:textSize="10sp"
                           android:padding="5dp"
                           android:text="Business Login"
                           android:layout_width="fill_parent"
                           android:layout_height="wrap_content" />
                   </RelativeLayout>
               </LinearLayout>


            <!--          <>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>-->
        </LinearLayout>


        <LinearLayout
            android:visibility="invisible"
            android:layout_weight=".5"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
                <RelativeLayout

                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/house"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="About"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>


